@page
@model EFCZealand.Pages.Akademier.AlleModel
@{
}

<h1 class="display-3 mb-8">Akademi</h1>

<div class="container">
    <div class="row">
        @foreach (var elem in Model.Data)
        {
            <div class="col-md-4 p-6">
                <div class="card shadow" style="width: 18rem;">
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title">@elem.AkademiNavn</h3>
                        <h5>Lokation: @(elem.AkademiLokation)</h5>
                        <h7>Beskrivelse:</h7>
                        <p><i>@(elem.AkademiBeskrivelse)</i></p>

@*                      <h8>Uddannelse: @(elem.Uddannelses)</h8>
                        <h8>Studieleder: @(elem.Studieleders)</h8> *@

                        <h8>Uddannelse: @string.Join(", ", elem.Uddannelses.Select(u => u.UddannelseNavn))</h8>
                        <h8>Studieleder: @string.Join(", ", elem.Studieleders.Select(s => s.Navn))</h8>



                        <h8>Antal Lærere: @(elem.AntalLærere)</h8>
                        <h9>Adresse: @(elem.AkademiAdresse)</h9>
                        <div>
                            @if (Model.CanDelete(elem.Id))
                            {
                                <a class="btn btn-outline-danger btn-sm mt-3"
                                   type="button"
                                   title="Slet"
                                   asp-page="Slet"
                                   asp-route-id="@elem.Id">
                                    <i class="bi-trash"></i>
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-outline-dark btn-sm mt-3"
                                   title="Kan ikke slettes">
                                    <i class="bi-slash-circle"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<p>
    <a class="btn btn-outline-primary mt-3" asp-page="Opret"> Opret en ny Akademi</a>
</p>
