@page
@model EFCZealand.Pages.Akademier.OpretModel
@{
}

<h1 class="display-3 mb-5">Opret en ny Akademi</h1>

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.AkademiNavn" class="control-label">Skriv Akademi navn</label>
        <input asp-for="@Model.Element.AkademiNavn" class="form-control" />
        <span asp-validation-for="@Model.Element.AkademiNavn" class="text-danger"></span>
    </div>


    <div class="form-group mb-3">
        <label asp-for="@Model.Element.AkademiBeskrivelse" class="control-label">Akademi Beskrivelse</label>
        <input asp-for="@Model.Element.AkademiBeskrivelse" class="form-control" />
        <span asp-validation-for="@Model.Element.AkademiBeskrivelse" class="text-danger"></span>
    </div>


    <div class="form-group mb-3">
        <label asp-for="@Model.Element.AkademiLokation" class="control-label">Lokation af Akademi</label>
        <input asp-for="@Model.Element.AkademiLokation" class="form-control" />
        <span asp-validation-for="@Model.Element.AkademiLokation" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.AkademiAdresse" class="control-label">Akademis Adresse</label>
        <input asp-for="@Model.Element.AkademiAdresse" class="form-control" />
        <span asp-validation-for="@Model.Element.AkademiAdresse" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Uddannelses" class="control-label">Uddannelse</label>
        <input asp-for="@Model.Element.Uddannelses" class="form-control" />
        <span asp-validation-for="@Model.Element.Uddannelses" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="@Model.Element.AntalLærere" class="control-label">Hvor mange lærer skal underviser?</label>
        <input asp-for="@Model.Element.AntalLærere" class="form-control" />
        <span asp-validation-for="@Model.Element.AntalLærere" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Studieleders" class="control-label">Valg en studieleder</label>
        <input asp-for="@Model.Element.Studieleders" class="form-control" />
        <span asp-validation-for="@Model.Element.Studieleders" class="text-danger"></span>
    </div>

    <p>
        <div class="form-group mb-3">
            <input type="submit" value="Opret" class="btn btn-outline-primary" />
        </div>
    </p>
</form>
