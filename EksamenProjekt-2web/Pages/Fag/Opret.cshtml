@page
@model EFCZealand.Pages.Fager.OpretModel
@{
}

<h1 class="display-3 mb-5">Opret en ny Fag</h1>

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.FagNavn" class="control-label">Fag Navn</label>
        <input asp-for="@Model.Element.FagNavn" class="form-control" />
        <span asp-validation-for="@Model.Element.FagNavn" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.FagBeskrivelse" class="control-label">Fag Beskrivelse</label>
        <input asp-for="@Model.Element.FagBeskrivelse" class="form-control" />
        <span asp-validation-for="@Model.Element.FagBeskrivelse" class="text-danger"></span>
    </div>

    <p>
        <div class="form-group mb-3">
            <input type="submit" value="Opret" class="btn btn-outline-primary" />
        </div>
    </p>
</form>
