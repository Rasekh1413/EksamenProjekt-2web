@page
@model EFCZealand.Pages.Kompetencer.OpretModel
@{
}

<h1 class="display-3 mb-5">Opret en ny kompetence</h1>

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.KompetenceNavn" class="control-label">Kompetence Navn</label>
        <input asp-for="@Model.Element.KompetenceNavn" class="form-control" />
        <span asp-validation-for="@Model.Element.KompetenceNavn" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.KompetenceBeskrivelse" class="control-label">Kompetence Beskrivelse</label>
        <input asp-for="@Model.Element.KompetenceBeskrivelse" class="form-control" />
        <span asp-validation-for="@Model.Element.KompetenceBeskrivelse" class="text-danger"></span>
    </div>

    <p>
        <div class="form-group mb-3">
            <input type="submit" value="Opret" class="btn btn-outline-primary" />
        </div>
    </p>
</form>
