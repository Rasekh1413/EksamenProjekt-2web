@page
@model EFCZealand.Pages.Lærer.AlleModel
@{
}

<h1 class="display-3 mb-5">Lærere</h1>

<div class="container">
    <div class="row">
        @foreach (var elem in Model.Data)
        {
            <div class="col-md-4 p-3">
                <div class="card shadow" style="width: 20rem;">
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title">@elem.Navn</h3>
                        <h8>Email: @(elem.Email)</h8>
                        <h8>Telefonnummer: @(elem.Telefonnummer)</h8>
                        <br>
                        <h8>Ansættelsesform: @(elem.Ansættelsesform)</h8>
                        <h8>Status: @(elem.Status)</h8>
                        <h8>Timetal: @(elem.Timetal) timer per uge</h8>

                        <br>
                        <h8>Hjemmeplacering: @(elem.Hjemmeplacering)</h8>
                        <h8>Primærplacering: @(elem.Primærplacering)</h8>
                        <h8>Sekundaereplaceringer: @(elem.Sekundaereplaceringer)</h8>
                        <br>
                        <h8>Semester erfaring: @(elem.SemesterErfaring)</h8>
                        <h8>Beviser: <br>@(elem.Beviser)</h8>
                        <br>
                        <h8>Fagligekvalifikationer:<br> @(elem.FagligeKvalifikationer)</h8>
                        <h8>Pædagogiskekvalifikationer: <br>@(elem.PædagogiskeKvalifikationer)</h8>
                        <h8>Speciellekvalifikationer: <br>@(elem.SpecielleKvalifikationer)</h8>
                        <br>


                        <div>
                            @if (Model.CanDelete(elem.Id))
                            {
                                <a class="btn btn-outline-danger btn-sm mt-3"
                                   type="button"
                                   title="Slet"
                                   asp-page="Slet"
                                   asp-route-id="@elem.Id">
                                    <i class="bi-trash"></i>
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-outline-dark btn-sm mt-3"
                                   title="Kan ikke slettes">
                                    <i class="bi-slash-circle"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<p>
    <a class="btn btn-outline-primary mt-3" asp-page="Opret"> Opret en Lærer</a>
</p>
