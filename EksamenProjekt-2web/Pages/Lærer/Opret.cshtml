@page
@model EFCZealand.Pages.Lærer.OpretModel
@{
}

<h1 class="display-3 mb-5">Opret ny en lærer</h1>

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Navn" class="control-label">Lærers navn</label>
