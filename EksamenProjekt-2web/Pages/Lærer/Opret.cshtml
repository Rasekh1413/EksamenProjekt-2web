        <span asp-validation-for="@Model.Element.Navn" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Telefonnummer" class="control-label"></label>
        <input asp-for="@Model.Element.Telefonnummer" class="form-control" />
        <span asp-validation-for="@Model.Element.Telefonnummer" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Email" class="control-label"></label>
        <input asp-for="@Model.Element.Email" class="form-control" />
        <span asp-validation-for="@Model.Element.Email" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Hjemmeplacering" class="control-label">Hjemmeplacering</label>
        <input asp-for="@Model.Element.Hjemmeplacering" class="form-control" />
        <span asp-validation-for="@Model.Element.Hjemmeplacering" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Beviser" class="control-label">Beviser</label>
        <input asp-for="@Model.Element.Beviser" class="form-control" />
        <span asp-validation-for="@Model.Element.Beviser" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.FagligeKvalifikationer" class="control-label">Faglige Kvalifikationer</label>
        <input asp-for="@Model.Element.FagligeKvalifikationer" class="form-control" />
        <span asp-validation-for="@Model.Element.FagligeKvalifikationer" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.PædagogiskeKvalifikationer" class="control-label">Pædagogiske Kvalifikationer</label>
        <input asp-for="@Model.Element.PædagogiskeKvalifikationer" class="form-control" />
        <span asp-validation-for="@Model.Element.PædagogiskeKvalifikationer" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.SpecielleKvalifikationer" class="control-label">Specielle Kvalifikationer</label>
        <input asp-for="@Model.Element.SpecielleKvalifikationer" class="form-control" />
        <span asp-validation-for="@Model.Element.SpecielleKvalifikationer" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.SemesterErfaring" class="control-label">Semester Erfaring</label>
        <input asp-for="@Model.Element.SemesterErfaring" class="form-control" />
        <span asp-validation-for="@Model.Element.SemesterErfaring" class="text-danger"></span>
    </div>

    <p>
        <div class="form-group mb-3">
            <input type="submit" value="Opret" class="btn btn-outline-primary" />
        </div>
    </p>
</form>
