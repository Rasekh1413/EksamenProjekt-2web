@page
@model EFCZealand.Pages.Lærer.OpretModel
@{
}

<h1 class="display-3 mb-5">Opret ny en lærer</h1>

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Navn" class="control-label">Lærers navn</label>
        <input asp-for="@Model.Element.Primærplacering" class="form-control" />
        <span asp-validation-for="@Model.Element.Id" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Navn" class="control-label"></label>
        <input asp-for="@Model.Element.Primærplacering" class="form-control" />
        <span asp-validation-for="@Model.Element.Hjemmeplacering" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Telefonnummer" class="control-label"></label>
        <input asp-for="@Model.Element.Ansættelsesform" class="form-control" />
        <span asp-validation-for="@Model.Element.Email" class="text-danger"></span>
    </div>

    <p>
        <div class="form-group mb-3">
            <input type="submit" value="Opret" class="btn btn-outline-primary" />
        </div>
    </p>
</form>
