@page
@model EFCZealand.Pages.LærerOgKompetenceAllokering.AlleModel
@{
}

<h1 class="display-3 mb-5">Lærer og Kompetence</h1>

<div class="container">
    <div class="row">
        @foreach (var elem in Model.Data)
        {
            <div class="col-md-4 p-3">
                <div class="card shadow" style="width: 18rem;">
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title">@elem.LokaidBeskrivelse</h3>
                        <h7>Lærer navn: @(elem.Lærer.Navn)</h7>
                        <h7>Lærerens kompetencer:<br> @(elem.Kompetence.KompetenceNavn)</h7>
                        <br>
                        <h8><p><i>Kompetence ID nummer: @(elem.Id)</i></p></h8>
                        <a  class="btn btn-outline-primary mt-3">Se Lærer</a>
                        <div>
                            @if (Model.CanDelete(elem.Id))
                            {
                                <a class="btn btn-outline-danger btn-sm mt-3"
                                   type="button"
                                   title="Slet"
                                   asp-page="Slet"
                                   asp-route-id="@elem.Id">
                                    <i class="bi-trash"></i>
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-outline-dark btn-sm mt-3"
                                   title="Kan ikke slettes">
                                    <i class="bi-slash-circle"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<p>
    <a class="btn btn-outline-primary mt-3" asp-page="Opret"> Side</a>
</p>
