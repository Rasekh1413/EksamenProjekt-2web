@page
@model EFCZealand.Pages.LærerOgKompetenceAllokering.OpretModel
@{
}

<h1 class="display-3 mb-5">Tilføj en ny kompetence til Læreren</h1>

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Lærer" class="control-label">Valg en Lærer</label>
        <input asp-for="@Model.Element.Lærer" class="form-control" />
        <span asp-validation-for="@Model.Element.Lærer" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Kompetence" class="control-label">Valg en Kompetence</label>
        <input asp-for="@Model.Element.Kompetence" class="form-control" />
        <span asp-validation-for="@Model.Element.Kompetence" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.LokaidBeskrivelse" class="control-label">Skriv en beskrivelse</label>
        <input asp-for="@Model.Element.LokaidBeskrivelse" class="form-control" />
        <span asp-validation-for="@Model.Element.LokaidBeskrivelse" class="text-danger"></span>
    </div>

    <p>
        <div class="form-group mb-3">
            <input type="submit" value="Opret" class="btn btn-outline-primary" />
        </div>
    </p>
</form>
