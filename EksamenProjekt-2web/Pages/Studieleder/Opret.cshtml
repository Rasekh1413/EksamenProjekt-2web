@page
@model EFCZealand.Pages.Studieledere.OpretModel
@{
}

<h1 class="display-3 mb-5">Opret ny Studieleder</h1>

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Navn" class="control-label">Skriv studieleder navn</label>
        <input asp-for="@Model.Element.Navn" class="form-control" />
        <span asp-validation-for="@Model.Element.Navn" class="text-danger"></span>
    </div>


    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Akademi.AkademiNavn" class="control-label">Valg en akademi</label>
        <input asp-for="@Model.Element.Akademi.AkademiNavn" class="form-control" />
        <span asp-validation-for="@Model.Element.Akademi.AkademiNavn" class="text-danger"></span>
    </div>



    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Email" class="control-label">Email</label>
        <input asp-for="@Model.Element.Email" class="form-control" />
        <span asp-validation-for="@Model.Element.Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Telefon" class="control-label">Telefonnummer</label>
        <input asp-for="@Model.Element.Telefon" class="form-control" />
        <span asp-validation-for="@Model.Element.Email" class="text-danger"></span>
    </div>


    <p>
        <div class="form-group mb-3">
            <input type="submit" value="Opret" class="btn btn-outline-primary" />
        </div>
    </p>
</form>
