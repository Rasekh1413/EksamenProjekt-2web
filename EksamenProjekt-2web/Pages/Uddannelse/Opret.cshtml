@page
@model EFCZealand.Pages.Uddannelser.OpretModel
@{
}

<h1 class="display-3 mb-5">Opret ny Uddannelse</h1>

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.UddannelseNavn" class="control-label">Skriv Uddannelses navn</label>
        <input asp-for="@Model.Element.UddannelseNavn" class="form-control" />
        <span asp-validation-for="@Model.Element.UddannelseNavn" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="@Model.Element.UddannelseBeskrivelse" class="control-label">Beskrivelse af Uddannelse</label>
        <input asp-for="@Model.Element.UddannelseBeskrivelse" class="form-control" />
        <span asp-validation-for="@Model.Element.UddannelseBeskrivelse" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Semester" class="control-label">Hvor mange semester?</label>
        <input asp-for="@Model.Element.Semester" class="form-control" />
        <span asp-validation-for="@Model.Element.Semester" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Lokale" class="control-label">på hvilke lokale?</label>
        <input asp-for="@Model.Element.Lokale" class="form-control" />
        <span asp-validation-for="@Model.Element.Lokale" class="text-danger"></span>
    </div>

    <p>
        <div class="form-group mb-3">
            <input type="submit" value="Opret" class="btn btn-outline-primary" />
        </div>
    </p>
</form>
